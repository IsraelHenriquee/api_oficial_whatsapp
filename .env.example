# WhatsApp Business API Token
# Obtenha em: https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=seu_token_aqui

# Token de verificação para o webhook (você escolhe este valor)
# Use o mesmo valor ao configurar o webhook no painel do Meta/Facebook
WHATSAPP_VERIFY_TOKEN=meu_token_secreto_12345

# Cloudflare R2 Configuration
R2ACCESSKEYID=seu_access_key_id
R2SECRETACCESSKEY=sua_secret_access_key
R2ACCOUNTID=seu_account_id
R2BUCKET=seu_bucket_name

# Porta da aplicação (opcional, padrão: 3000)
PORT=3000

# Ambiente (opcional, padrão: production no Docker)
NODE_ENV=production
